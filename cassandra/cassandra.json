{
  "id": "cassandra-cluster2",
  "cpus": 0.3,
  "mem": 256.0,
  "instances": 1,
  "privileged": true,
  "networks": [ { "mode": "container/bridge" } ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "sdtdensimag/cassandra:latest",
      "parameters": [
        {
          "key": "env",
          "value": "CASSANDRA_CLUSTERNAME=cassandra-cluster"
        },
        {
          "key": "env",
          "value": "CASSANDRA_SEEDS=172.17.0.1"
        }
      ]
    },
    "portMappings": [
      { "containerPort": 9042, "hostPort": 0, "servicePort": 9043, "protocol": "tcp" }
    ]
  }
}


{
  "id": "cassandra",
  "cpus": 0.3,
  "mem": 256.0,
  "instances": 1,
  "privileged": true,
  "networks": [ { "mode": "container/bridge" } ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "sdtdensimag/cassandra:latest"
    },
    "portMappings": [
      { "containerPort": 9042, "hostPort": 0, "servicePort": 9042, "protocol": "tcp" },
      { "containerPort": 7000, "hostPort": 0, "servicePort": 7000, "protocol": "tcp" },
      { "containerPort": 7001, "hostPort": 0, "servicePort": 7001, "protocol": "tcp" },
      { "containerPort": 7199, "hostPort": 0, "servicePort": 7199, "protocol": "tcp" },
      { "containerPort": 9160, "hostPort": 0, "servicePort": 9160, "protocol": "tcp" }
    ]
  }
}

{
  "id": "cassandra-cluster",
  "groups": [
    {
      "id": "cluster1",
      "apps": [
        {
          "id": "cassandra1",
          "container": {
            "docker": {
              "image": "jonasrosland/docker-cassandra:cluster",
              "privileged": true,
              "forcePullImage": true,
              "parameters": [
                {
                  "key": "env",
                  "value": "CASSANDRA_CLUSTERNAME=cassandra-cluster"
                },
                {
                  "key": "env",
                  "value": "CASSANDRA_SEEDS=172.31.2.11,172.31.2.12,172.31.2.13"
                },
                {
                  "key": "volume-driver",
                  "value": "rexray"
                },
                {
                  "key": "volume",
                  "value": "cassandra1:/var/lib/cassandra"
                }
              ]
            }
          },
          "cpus": 0.3,
          "mem": 256,
          "instances": 1,
          "constraints": [
            [
              "hostname",
              "UNIQUE"
            ]
          ]
        },
        {
          "id": "cassandra2",
          ...
        },
        {
          "id": "cassandra3",
          ...
        }
      ]
    }
  ]
}

